<div class="sidebar-sticky border-right border-secondary p-3">
    <ul class="nav flex-column border-bottom border-secondary">
        <li class="nav-item d-flex justify-content-center p-3">
            <h1 class="title-small"><%= current_user.name %></h1>
        </li>
    </ul>
    <ul class="nav flex-column">
        <li class="nav-item big d-flex justify-content-center pt-2">
            <p class="nav-link mb-0" href="#">
                Categories
            </p>
        </li>
        <li class="nav-item d-flex justify-content-center">
            <%= link_to posts_path, class: 'nav-link' do %>
                All
                <span class="badge badge-secondary">
                    <%= current_user.posts.count %>
                </span>
            <% end %>
        <li>
        <% Category.all.each do |category| %>
            <li class="nav-item d-flex justify-content-center">
                <%= link_to posts_path(:category_id => category.id), class: 'nav-link' do %>
                    <%= category.name %>
                    <span class="badge badge-secondary">
                        <%= get_category_count(category) %>
                    </span>
                <% end %>
            </li>
        <% end %>
    </ul>
    <ul class="nav flex-column border-top border-secondary">
        <li class="nav-item big d-flex justify-content-center p-3">
            <%= link_to new_post_path, class:"nav-link" do %>
                Add clothes
                <img src="https://img.icons8.com/metro/26/000000/plus.png">
            <% end %>
        </li>
    </ul>
</div>