<div class="col-sm-6 col-sm-offset-3 mt-5 mx-auto">
    <h2 class="text-center title-medium mt-5 mb-5">Create a new look</h2>
    <%= bootstrap_form_for @combination do |f| %>
        <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>

        <%= f.text_field :name, placeholder: "name", class: 'pl-2' %>

        <%= f.submit 'Next', class: 'btn sign-up-button btn-outline-secondary w-100 mt-3' %>
    <% end %>
    <%= link_to "Back", combinations_path, class:"btn btn-outline-secondary text-body ml-sm-4 ml-1 mt-4" %>
</div>
