<div class="col pt-3">
    <h1 class="paragraph-big mt-3 mb-4 ml-4">
        Select the items you want to add in your combination:
    </h1>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice", :class => "ml-5 mt-3" ) if flash[:notice] %>
    <ul id="images-container" class="p-0 mt-1">
        <% @posts.each do |post| %>
            <li class="mx-1 mx-sm-4">
                <div style='background-image: url(<%=(url_for(post.picture)) %>)'>
                    <%= link_to new_post_combination_path(:combination_id => params[:combination_id], :post_id => post.id), class:"btn btn-light" do %>
                        <img src="https://img.icons8.com/metro/26/000000/plus.png">
                    <% end %>
                </div>
            </li>
        <% end %>
    </ul>
    <%= link_to "Back", combinations_path, class:"btn btn-outline-secondary text-body ml-sm-4 ml-1 mt-4 mb-2" %>
</div>
