<div class="container-fluid full-page">
    <div class="row h-100" id="body-row">
        <%= render "posts/sidebar" %>
        <div class="col pt-3">
            <h1 class="title-small"><%= @combination.name %></h1>
            <% if @items.empty? %>
                <h1 class="paragraph-big">No items in this combination yet</h1>
            <% else %>
                <ul id="images-container">
                    <% @items.each do |item| %>
                        <li>
                            <div style='background-image: url(<%=(url_for(item.picture)) %>)'></div>
                            <%= link_to "Remove item", post_combination_path(:combination_id => @combination_id, :post_id => item.id), method: :delete,  class:"btn btn-secondary btn-sm",  data: { confirm: 'Are you sure?' } %>
                        </li>
                    <% end %>
                </ul>
            <% end %>
            <%= link_to show_options_path(:combination_id => @combination.id), class:"btn btn-light" do %>
                Add items
                <img src="https://img.icons8.com/metro/26/000000/plus.png">
            <% end %>
            <%= link_to "Delete", combination_path(@combination), method: :delete,  class:"btn btn-secondary btn-sm",  data: { confirm: 'Are you sure?' } %>
            <%= link_to "Back", combinations_path, class:"btn btn-secondary btn-sm" %>
        </div>
    </div>  
</div>