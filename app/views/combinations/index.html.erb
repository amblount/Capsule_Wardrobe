<div class="container-fluid full-page">
    <div class="row h-100" id="body-row">
        <%= render "posts/sidebar" %>
        <div class="col pt-3">
            <h1 class="paragraph-big  mt-2 ml-5">
                <%= display_text(@combinations) %>
            </h1>
            <%= content_tag(:div, flash[:notice], :id => "flash_notice", :class => "ml-5 mt-3" ) if flash[:notice] %>
            <ul>
                <% @combinations.each do |combination| %>
                    <li>
                        <%= link_to combination.name, combination %>
                        <%= link_to "Delete", combination_path(combination), method: :delete,  class:"btn btn-secondary btn-sm",  data: { confirm: 'Are you sure?' } %>
                    </li>
                <% end %>
            </ul>
            <%= link_to new_combination_path, class:"btn btn-secondary" do %>
                Create new look
                <img src="https://img.icons8.com/metro/26/000000/plus.png">
            <% end %>
            <%= link_to "Back", posts_path, class:"btn btn-secondary" %>
        </div>
    </div>  
</div>